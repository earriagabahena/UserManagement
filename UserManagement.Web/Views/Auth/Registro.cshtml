@model UserManagement.Business.DTOs.CreateUsuarioDto
@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EY - Crear Cuenta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #2E2E38;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .card {
            max-width: 500px;
            width: 100%;
            border: none;
            border-top: 4px solid #FFE600;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .btn-primary {
            background-color: #FFE600;
            border: none;
            color: #2E2E38;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #e6cf00;
                color: #2E2E38;
            }

        .text-ey {
            color: #2E2E38;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-ey">
                    <span style="background:#2E2E38; color:#FFE600; padding:0 8px;">EY</span>
                </h2>
                <p class="text-muted small mb-0">Building a better working world</p>
                <h5 class="mt-3 fw-bold text-ey">Crear Nueva Cuenta</h5>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div><i class="fas fa-exclamation-circle me-1"></i>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form method="post" asp-action="Registro" asp-controller="Auth">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombre Completo <span class="text-danger">*</span></label>
                    <input asp-for="NombreCompleto" class="form-control" placeholder="Juan Pérez García" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Usuario <span class="text-danger">*</span></label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="jperez" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Correo <span class="text-danger">*</span></label>
                    <input asp-for="Correo" type="email" class="form-control" placeholder="correo@empresa.com" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Contraseña <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" id="password" class="form-control"
                               placeholder="Mínimo 14 caracteres" required />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                            <i class="fas fa-eye" id="eyeIcon"></i>
                        </button>
                    </div>
                    <small class="text-muted">
                        Mínimo 14 caracteres con mayúsculas, minúsculas, números y símbolos
                    </small>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 mt-3">
                    <i class="fas fa-user-plus me-2"></i>Crear Cuenta
                </button>

                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Auth" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i>Volver al login
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById('password');
            const icon = document.getElementById('eyeIcon');
            input.type = input.type === 'password' ? 'text' : 'password';
            icon.classList.toggle('fa-eye');
            icon.classList.toggle('fa-eye-slash');
        }
    </script>
</body>
</html>