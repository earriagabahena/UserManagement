@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EY - Iniciar Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --ey-yellow: #FFE600;
            --ey-black: #2E2E38;
            --ey-gray: #747480;
            --ey-light: #F6F6FA;
        }

        body {
            background-color: var(--ey-black);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: white;
            border-radius: 0;
            border-top: 4px solid var(--ey-yellow);
            padding: 2.5rem;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.4);
        }

        .ey-logo {
            font-size: 2.5rem;
            font-weight: 900;
            color: var(--ey-black);
            letter-spacing: -2px;
        }

            .ey-logo span {
                color: var(--ey-yellow);
                background: var(--ey-black);
                padding: 0 6px;
            }

        .btn-ey {
            background-color: var(--ey-yellow);
            color: var(--ey-black);
            font-weight: 700;
            border: none;
            border-radius: 0;
            padding: 0.75rem;
            width: 100%;
            font-size: 1rem;
            letter-spacing: 0.5px;
            transition: background 0.2s;
        }

            .btn-ey:hover {
                background-color: #f0d800;
                color: var(--ey-black);
            }

        .form-control {
            border-radius: 0;
            border: 1px solid #ddd;
            padding: 0.75rem;
        }

            .form-control:focus {
                border-color: var(--ey-yellow);
                box-shadow: 0 0 0 0.2rem rgba(255,230,0,0.25);
            }

        .form-label {
            font-weight: 600;
            color: var(--ey-black);
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="text-center mb-4">
            <div class="ey-logo"><span>EY</span></div>
            <p class="text-muted mt-2 mb-0" style="font-size:0.9rem">Building a better working world</p>
        </div>

        <h5 class="mb-4 fw-bold" style="color: var(--ey-black)">Iniciar Sesión</h5>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success rounded-0 py-2" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger rounded-0 py-2" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
            </div>
        }

        <form method="post" asp-action="Login" asp-controller="Auth">
            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input type="text" name="nombreUsuario" class="form-control"
                       placeholder="Ingresa tu usuario" required autofocus />
            </div>
            <div class="mb-4">
                <label class="form-label">Contraseña</label>
                <div class="input-group">
                    <input type="password" name="password" id="password" class="form-control"
                           placeholder="Ingresa tu contraseña" required />
                    <button type="button" class="btn btn-outline-secondary rounded-0"
                            onclick="togglePassword()">
                        <i class="fas fa-eye" id="eyeIcon"></i>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn-ey">
                <i class="fas fa-sign-in-alt me-2"></i>Ingresar
            </button>
        </form>

        <div class="mt-3 pt-3 border-top">
            <a asp-action="Registro" asp-controller="Auth" class="btn btn-outline-dark w-100" style="border-radius: 0; font-weight: 600;">
                <i class="fas fa-user-plus me-2"></i>Crear Nueva Cuenta
            </a>
        </div>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById('password');
            const icon = document.getElementById('eyeIcon');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }
    </script>
</body>
</html>